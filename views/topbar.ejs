<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container" >
        <div class="navbar-header" >
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/" class="navbar-brand"><%= Sys.cont.siteName %></a>
        </div>

        <nav class="collapse navbar-collapse" role="navigation">
            <ul class="nav navbar-nav">
                <% Sys.cont.artideType.forEach(function(item){ %>
                    <% if (item.child && item.child.length>0){%>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <%= item.key%><b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <% item.child.forEach(function(item2){ %>
                                    <li><a href="/<%= item2.value %>"><%=item2.key%></a></li>
                                <%})%>
                            </ul>
                        </li>
                    <%}else{%>
                        <% if(activeTab === item.key){ %>
                                <li class="active">
                                    <a href="/<%= item.value %>"><%= item.key%></a>
                                </li>
                            <% }else{ %>
                                <li>
                                    <a href="/<%= item.value %>"><%= item.key %></a>
                                </li>
                            <% } %>
                        </li>
                    <%}%>
                <% }) %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <% if (locals.user != null) { %>
                <li>
                    <a href="/user/info"><i class="glyphicon glyphicon-user"></i>  <%= locals.user.username %></a>
                </li>
                <li>
                    <a href="/logout"><i class="glyphicon glyphicon-off"></i> 退出</a>
                </li>
                <% }else{ %>
                <li>
                    <!--<a href="#myModal" data-toggle="modal" data-target="#myModal"><i
                                class="glyphicon glyphicon-user"></i> 登录</a>-->
                    <a href="/login"> <i class="glyphicon glyphicon-user"></i> 登录</a>
                </li>
                <li>
                    <a href="/register"><i class="glyphicon glyphicon-off"></i> 注册</a>
                </li>
                <% } %>
            </ul>
        </nav>
    </div>
</div>
<div class="custline"></div>
<div class="modal fade" id="userLoginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="width:400px">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">-用户登录-</h4>
            </div>
            <form class="form form-signin" role="form" action="/user/login" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <input name="username" class="form-control" placeholder="用户名" required="true" autofocus="true">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control" placeholder="密码" autofocus="true"
                               required="true">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">返回</button>
                    <button type="submit" class="btn btn-primary">登录</button>
                </div>
            </form>
        </div>
    </div>
</div>